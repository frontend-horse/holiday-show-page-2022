---
export interface Props {
  className: string;
}
const { className } = Astro.props;
---

<div class={`snow ${className}`}></div>

<style lang="scss">
  @import '../styles/mixins.scss';

  .snow {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: url('/images/foreground-snow.svg') top center repeat;
    pointer-events: none;

    @include forced-colors-hidden;
  }
</style>
