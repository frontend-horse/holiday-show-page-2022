---
import Logo from './Logo.astro';
import RegistrationButton from './RegistrationButton.astro';

const { pathname } = Astro.url;
---

<header role="banner">
  <nav>
    <a href="/#sponsors">Sponsors</a>
    <a href="/#guests">Guests</a>
    <a
      href="/contributors/"
      rel="prefetch"
      aria-current={pathname === '/contributors/' ? 'page' : undefined}
    >
      Team
    </a>
  </nav>
  <Logo />
  <div class="actions">
    <RegistrationButton variant="red">Register</RegistrationButton>
  </div>
</header>

<style lang="scss">
  header[role='banner'] {
    --container-width: 1136px;

    align-items: center;
    display: flex;
    flex-flow: column;
    gap: var(--space-s);
    // height: 100px;
    justify-content: space-between;
    margin-inline: auto;
    padding-block: var(--space-s);
    width: min(var(--container-width), 100% - var(--space-m-l));
    @media (min-width: 640px) {
      flex-flow: row;
    }
    nav {
      display: flex;
      flex: 1;
      gap: var(--space-s);
      order: 2;
      @media (min-width: 640px) {
        order: 1;
      }
    }

    .actions {
      display: flex;
      flex: 1;
      justify-content: flex-end;
      order: 3;
      html.index & {
        @media (max-width: 640px) {
          display: none;
        }
      }
    }
  }
</style>
