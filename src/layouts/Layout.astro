---
export interface Props {
  description: string;
  title: string;
}

const { description, title } = Astro.props;
import '../styles/main.scss';
import Snow from '../components/Snow.astro';
import NavBar from '../components/NavBar.astro';
import Footer from '../components/Footer.astro';
import StructuredData from '../components/StructuredData.astro';
import OpenGraph from '../components/OpenGraph.astro';
import FaviconLinks from '../components/FaviconLinks.astro';
import FontPreload from '../components/FontPreload.astro';

const isHomepage = Astro.url.pathname === '/';

const longPageBackground = `linear-gradient(
    180deg,
    hsl(209deg 100% 6%) 0%,
    hsl(290deg 40% 35%) 49%,
    hsl(339deg 37% 57%) 70%,
    hsl(7deg 60% 68%) 85%,
    hsl(29deg 77% 73%) 100%
  )`;

const shortPageBackground = `linear-gradient(
    180deg,
    hsl(209deg 100% 9%) 0%,
    hsl(218deg 93% 12%) 11%,
    hsl(226deg 87% 15%) 22%,
    hsl(236deg 60% 18%) 33%,
    hsl(245deg 63% 21%) 44%,
    hsl(253deg 67% 24%) 56%,
    hsl(263deg 60% 26%) 67%,
    hsl(272deg 53% 29%) 78%,
    hsl(281deg 46% 32%) 89%,
    hsl(290deg 40% 35%) 100%
  )`;

let pageBackground;

if (isHomepage) {
  pageBackground = longPageBackground;
} else {
  pageBackground = shortPageBackground;
}
---

<!DOCTYPE html>
<html lang="en" class={`${isHomepage ? 'index' : ''}`}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <FaviconLinks />
    <FontPreload />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <OpenGraph title={title} description={description} />
    <StructuredData />
    <script
      id="luma-checkout"
      defer
      src="https://embed.lu.ma/checkout-button.js"
    ></script>
  </head>
  <body>
    <Snow />
    <NavBar />
    <slot />
    <Footer />
    <style is:global lang="scss" define:vars={{ pageBackground }}>
      @import 'src/styles/mixins.scss';
      :root {
        --box-color: hsla(223, 81%, 9%, 75%);
      }

      body {
        min-height: 100vh;
        max-width: 100dvw;
        overflow-x: hidden;

        background: url('/images/foreground-snow.svg'), var(--pageBackground);
        background-size: 200px, auto;
        background-repeat: repeat, auto;
      }

      section {
        header {
          margin-bottom: var(--space-s-m);
        }

        p {
          margin-bottom: var(--space-xs-s);
        }
      }
    </style>
  </body>
</html>
